# 🌍 Configuration Staging/Test
NODE_ENV=staging
PORT=3001

# 🗄️ Base de données (Staging)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/geneaia_staging"

# 🔐 Sécurité (Staging)
JWT_SECRET="staging-secret-key-different-from-prod"
JWT_EXPIRES_IN="2h"

# 🌐 CORS (Staging)
CORS_ORIGIN="https://staging.geneaia.com"

# 📁 Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# 📧 Email (Test)
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
ENABLE_EMAIL_VERIFICATION=true

# 🔍 Logs (Staging)
LOG_LEVEL="info"
PRISMA_LOG_LEVEL="info"

# 🎯 Fonctionnalités (Staging)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true

# 🚀 API URL (Staging)
API_URL="https://api-staging.geneaia.com"

# 🔒 Sécurité (Modérée)
LOGIN_LOCKOUT_DURATION=15
LOGIN_MAX_ATTEMPTS=5

# 📊 Monitoring (Test)
MONITORING_ENABLED=true
SENTRY_DSN=""

# 🏃‍♂️ Performance (Staging)
DATABASE_POOL_SIZE=5
