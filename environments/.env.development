# 🌍 Configuration Développement Local
NODE_ENV=development
PORT=3001

# 🗄️ Base de données (Local)
DATABASE_URL="postgresql://kader:kader@localhost:5432/genea?schema=public"

# 🔐 Sécurité (Développement)
JWT_SECRET="dev-secret-key-for-local-development-only"
JWT_EXPIRES_IN="7d"

# 🌐 CORS (Local)
CORS_ORIGIN="http://localhost:5173"

# 📁 Upload
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760

# 📧 Email (Désactivé en dev)
SMTP_HOST=""
ENABLE_EMAIL_VERIFICATION=false

# 🔍 Logs (Verbose en dev)
LOG_LEVEL="debug"
PRISMA_LOG_LEVEL="info"

# 🎯 Fonctionnalités (Dev)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true

# 🚀 API URL (Local)
API_URL="http://localhost:3001"

# 🔒 Sécurité (Relâchée en dev)
LOGIN_LOCKOUT_DURATION=5
LOGIN_MAX_ATTEMPTS=10

# 📊 Monitoring (Désactivé)
MONITORING_ENABLED=false
SENTRY_DSN=""
