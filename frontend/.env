# 🎨 Configuration Frontend GeneaIA
# Copiez ce fichier vers .env et configurez vos paramètres


# 📱 Application
VITE_APP_NAME="GeneaIA"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Application de généalogie intelligente"

# 🌐 API Backend
# En développement: http://localhost:3001/api
# En production: https://api.votre-domaine.com/api
VITE_API_URL="/api"

# 📁 Upload de fichiers
# Taille max en octets (10MB = 10485760)
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,gif,pdf"

# 🎨 Interface utilisateur
VITE_THEME_DEFAULT="light"
VITE_LANGUAGE_DEFAULT="fr"

# 🗺️ Configuration des cartes (si utilisé)
# Clés d'API pour les services de cartographie
VITE_MAPBOX_TOKEN=""
VITE_GOOGLE_MAPS_API_KEY=""

# 📊 Analytics (optionnel)
# Google Analytics, Mixpanel, etc.
VITE_GA_TRACKING_ID=""
VITE_ANALYTICS_ENABLED=false

# 🔒 Sécurité
# Domaines autorisés pour les iframes, scripts, etc.
VITE_TRUSTED_DOMAINS="localhost,127.0.0.1"

# 🌍 Internationalisation
VITE_SUPPORTED_LANGUAGES="fr,en"
VITE_DEFAULT_LOCALE="fr"

# 🎯 Fonctionnalités
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_PWA=true

# 📱 Progressive Web App (PWA)
VITE_PWA_NAME="GeneaIA"
VITE_PWA_SHORT_NAME="GeneaIA"
VITE_PWA_DESCRIPTION="Application de généalogie intelligente"
VITE_PWA_THEME_COLOR="#1976d2"
VITE_PWA_BACKGROUND_COLOR="#ffffff"

# 🔄 Cache et performance
# Durée de cache pour les ressources statiques (en secondes)
VITE_CACHE_DURATION=3600
VITE_ENABLE_SERVICE_WORKER=true

# 🐛 Débogage
# Activer les logs détaillés en développement
VITE_DEBUG_MODE=false
VITE_ENABLE_REDUX_DEVTOOLS=true

# 🌐 URLs externes
# URLs vers la documentation, support, etc.
VITE_DOCS_URL="https://docs.geneaia.com"
VITE_SUPPORT_URL="https://support.geneaia.com"
VITE_PRIVACY_URL="https://geneaia.com/privacy"
VITE_TERMS_URL="https://geneaia.com/terms"

# 🎨 Personnalisation
# Couleurs primaires pour le thème
VITE_PRIMARY_COLOR="#1976d2"
VITE_SECONDARY_COLOR="#dc004e"

# 📧 Contact
VITE_CONTACT_EMAIL="contact@geneaia.com"
VITE_SUPPORT_EMAIL="support@geneaia.com"

# 🔗 Réseaux sociaux (optionnel)
VITE_FACEBOOK_URL=""
VITE_TWITTER_URL=""
VITE_LINKEDIN_URL=""
VITE_GITHUB_URL="https://github.com/RedakArraid/genea"

# 🚀 Déploiement
# Mode de déploiement (development, staging, production)
VITE_DEPLOYMENT_MODE="development"
VITE_BUILD_TIMESTAMP=""

# 📊 Monitoring frontend (optionnel)
# Services comme Sentry pour le monitoring des erreurs
VITE_SENTRY_DSN=""
VITE_MONITORING_ENABLED=false

# 🎮 Fonctionnalités expérimentales
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_EXPERIMENTS=false
