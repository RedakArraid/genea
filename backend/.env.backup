# 🔧 Configuration Backend GeneaIA
# Copiez ce fichier vers .env et configurez vos paramètres


# Environnement
NODE_ENV=development
PORT=3001

# 🗄️ Base de données PostgreSQL
# Format: postgresql://utilisateur:motdepasse@host:port/base
DATABASE_URL="postgresql://kader:kader@localhost:5432/genea?schema=public"

# 🔐 Sécurité JWT
# Générez une clé secrète longue et sécurisée (minimum 32 caractères)
JWT_SECRET="votre-secret-jwt-tres-long-et-securise-minimum-32-caracteres"
JWT_EXPIRES_IN="7d"

# 🌐 CORS (Cross-Origin Resource Sharing)
# En développement: http://localhost:5173
# En production: https://votre-domaine.com
CORS_ORIGIN="http://168.231.86.179:5173"

# 📁 Upload de fichiers
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf"

# 📧 Configuration Email (optionnel)
# Pour l'envoi d'emails de confirmation, réinitialisation, etc.
SMTP_HOST=""
SMTP_PORT=""
SMTP_SECURE=true
SMTP_USER=""
SMTP_PASS=""
FROM_EMAIL="noreply@geneaia.com"
FROM_NAME="GeneaIA"

# 🔍 Configuration des logs
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"

# 🗄️ Configuration Prisma
# Niveau de log Prisma: info, warn, error
PRISMA_LOG_LEVEL="warn"

# 🚀 Déploiement
# URL de l'API pour les webhooks, notifications, etc.
API_URL="http://localhost:3001"

# 🎯 Fonctionnalités optionnelles
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true

# 🏃‍♂️ Performance
# Nombre maximum de connexions simultanées à la base
DATABASE_POOL_SIZE=10

# 🔒 Sécurité avancée
# Durée de blocage après tentatives de connexion échouées (en minutes)
LOGIN_LOCKOUT_DURATION=15
# Nombre max de tentatives avant blocage
LOGIN_MAX_ATTEMPTS=5

# 📊 Monitoring (optionnel)
# Pour des services comme Sentry, LogRocket, etc.
SENTRY_DSN=""
MONITORING_ENABLED=false

# 🌍 Internationalisation
DEFAULT_LANGUAGE="fr"
SUPPORTED_LANGUAGES="fr,en"

# 💾 Cache Redis (optionnel)
# Si vous utilisez Redis pour le cache
REDIS_URL=""
REDIS_ENABLED=false

# 🔄 Tâches en arrière-plan (optionnel)
# Pour des tâches asynchrones
QUEUE_ENABLED=false
QUEUE_REDIS_URL=""
